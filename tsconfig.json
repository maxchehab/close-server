{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
